NODE_ENV=production

# Images
BACKEND_IMAGE=collabapp-backend:latest
WS_IMAGE=collabapp-ws:latest
FRONTEND_IMAGE=collabapp-frontend:latest

# Ports
BACKEND_PORT=3000
WS_PORT=8089
FRONTEND_PORT=3001
POSTGRES_PORT=5432
KAFKA_PORT=9092
ZOOKEEPER_PORT=2181

# Database
POSTGRES_USER=collabapp
POSTGRES_PASSWORD=collabapp
POSTGRES_DB=collabapp
DATABASE_URL=postgresql://collabapp:collabapp@postgres:5432/collabapp?schema=public

# Auth
JWT_SECRET=change-me

# CORS
CORS_ORIGINS=https://app.example.com,https://admin.example.com

# Kafka
KAFKA_BROKERS=kafka:9093
KAFKA_CLIENT_ID=collabapp-prod
KAFKA_GROUP_ID=chat-group-prod

# Frontend runtime config
NEXT_PUBLIC_API_URL=https://api.example.com/api
NEXT_PUBLIC_WS_URL=wss://ws.example.com
